{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "listFiles": true,
        "newLine": "LF",
        "noEmitOnError": true,
        "inlineSources": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./**/*.d.ts",
        "./typings/**/*.d.ts",
        "!./example/**/*.ts",
        "!./pages/**/*.ts",
        "!./node_modules/**/*"
    ],
    "exclude": [],
    "files": [
        "public/lib/ikalog.ts",
        "public/lib/index.ts",
        "typings/bundle.d.ts",
        "typings/eventemitter2/eventemitter2.d.ts"
    ]
}